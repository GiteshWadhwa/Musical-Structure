<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wadhwa.gitesh.secondproject.albums"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="ALBUMS"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_red_light"
        android:layout_margin="20dp"/>
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/albums"
        android:text="This Activity will display a list of songs to play in Albums.The user can select album form which he/she want to listen song."
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
     android:id="@+id/textView5" />

    <Button
        android:id="@+id/artist1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:text="ARTIST"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
