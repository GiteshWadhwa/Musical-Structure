<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wadhwa.gitesh.secondproject.folders"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Folders"
        android:textSize="25sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_centerHorizontal="true"
        android:layout_margin="35dp"
        android:id="@+id/textView2"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="14dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="This Activity will display a list of different folders .The user can select folder form which he/she want to listen song."
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/albums1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="61dp"
        android:layout_marginEnd="44dp"
        android:text="ARTIST"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
